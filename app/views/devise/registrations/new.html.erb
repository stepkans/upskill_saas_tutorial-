<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
        <% if params[:plan] == '2' %>
          <h1> Pro Account</h1>
          <p> Sign Up for a Pro Account for $10/Month and get access to the comminity and contact information</p>
        <% else %>
           <h1>Basic Account</h1>
           <p>Sign Up for free and get basic access to the community</p>
        <% end %>
      </div>  
      <div class="well">
        <h2>Sign up Here</h2>
        <% if params[:plan] == "2"  %>
           <%= render "pro_form" %>
        <% else %> 
           <%= render "basic_form" %>
         <% end %> 
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>